{
	"compilerOptions": {
		"importsNotUsedAsValues": "error",
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react",
		"module": "CommonJS",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"outDir": "dist/",
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"i8085": ["Shared/i8085"],
			"Shared/*": ["Shared/*"],
			"Assembler/*": ["Assembler/*"]
		}
	},
	"include": ["src/**/*.ts", "test/**/*.spec.ts"]
}
